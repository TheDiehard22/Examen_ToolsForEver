@model Examen_ToolsForEver.Models.ViewModels.ProductViewModel

<div class="control__form">

    <h1 class="control__heading">Maak een nieuw product</h1>

    <form class="form-horizontal" asp-controller="Beheer" asp-action="CreateProduct">

        <div class="form-group">
            <label asp-for="Naam"></label>
            <input asp-for="Naam" class="form-control" />
        </div>
        
        <div class="form-group">
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="InkoopWaarde"></label>
            <input asp-for="InkoopWaarde" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="VerkoopWaarde"></label>
            <input asp-for="VerkoopWaarde" class="form-control" />
        </div>

        <div class="form-group">
            <label>Fabrikant</label>
            <select asp-for="FabrikantID" asp-items="@Model.FabrikantenLijst" class="form-control">
                <option>Selecteer een fabriek</option>
            </select>
        </div>

        <div class="form-group">
            <label>Locatie</label>
            <select asp-for="LocatieID" asp-items="@Model.LocatiesLijst" class="form-control">
                <option>Selecteer een Locatie</option>
            </select>
        </div>

        <input class="btn btn-primary" type="submit" value="Create" />
    </form>
</div>
